{% extends 'back.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
     <div class="col-12 p-3">
        <h1 class="h3">Liste des Catégories</h1>
    </div>
   <div class="col-12">
        <div class="card card-body">
            <div class="col sm-5 m-3">
                <a href="{{ path('app_back_category_new') }}" class="btn btn-warning mb-2">
                <i class="bi bi-plus-circle-fill"></i>
                Ajouter une catégorie</a>
            </div>
            <div class="table-responsive-sm">
                <table class="table">
                    <thead class="bg-light">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td scope="row">{{ category.id }}</td>
                            <td>{{ category.name }}</td>
                            <td>
                                <a href="{{ path('app_back_category_show', {'id': category.id}) }}" class="btn btn-white mb-2"><i class="bi bi-eye-fill"></i>Voir</a>
                                <a href="{{ path('app_back_category_edit', {'id': category.id}) }}" class="btn btn-white mb-2"><i class="bi bi-pencil-square"></i>Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
