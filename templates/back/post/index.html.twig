{% extends 'back.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <div class="col-12 p-3">
        <h1 class="h3">Articles</h1>
    </div>
    <div class="col-12">
        <div class="card card-body">
            <div class="col sm-5 m-3">
                <a href="{{ path('app_back_post_new') }}" class="btn btn-warning mb-2">
                <i class="bi bi-plus-circle-fill"></i>
                Ajouter un Article</a>
            </div>
            <div class="table-responsive-sm">
                <table class="table table-hover">
                    <caption>Liste des articles</caption>
                    <thead class="bg-light">
                        <tr>
                            <th>Title</th>
                            <th>PublishedAt</th>
                            <th>CreatedAt</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for post in posts %}
                        <tr class="align-middle">
                            <td>{{ post.title }}</td>
                            <td>{{ post.publishedAt ? post.publishedAt|date('d-m-Y') : '' }}</td>
                            <td>{{ post.createdAt ? post.createdAt|date('d-m-Y') : '' }}</td>
                            <td>
                                <a href="{{ path('app_back_post_show', {'id': post.id}) }}" class="btn btn-white mb-2">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a href="{{ path('app_back_post_edit', {'id': post.id}) }}" class="btn btn-white mb-2">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
{% endblock %}
