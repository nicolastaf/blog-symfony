{% extends 'back.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
    <div class="col-12 p-3">
        <h1 class="h2">Auteur : {{ author.firstname }}</h1>
    </div>
     <div class="col-12">
        <div class="card card-body">
            <div class="col sm-5 m-3 d-flex justify-content-between">
                <a href="{{ path('app_back_authors_index') }}" class="btn btn-warning mb-2">Retour</a>

                <a href="{{ path('app_back_author_edit', {'id': author.id}) }}" class="btn btn-warning mb-2">
                    <i class="bi bi-pencil-square"></i> Modifier
                </a>
            </div>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ author.id }}</td>
                    </tr>
                    <tr>
                        <th>Firstname</th>
                        <td>{{ author.firstname }}</td>
                    </tr>
                    <tr>
                        <th>Lastname</th>
                        <td>{{ author.lastname }}</td>
                    </tr>
                    <tr>
                        <th>CreatedAt</th>
                        <td>{{ author.createdAt ? author.createdAt|date('d-m-Y') : '' }}</td>
                    </tr>
                    <tr>
                        <th>UpdatedAt</th>
                        <td>{{ author.updatedAt ? author.updatedAt|date('d-m-Y') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Nombre d'article </th>
                        <td>{{ author.posts|length }} </td>
                    </tr>
                </tbody>
            </table>
        </div>
    {{ include('back/author/_delete_form.html.twig') }}
    </div>
{% endblock %}
